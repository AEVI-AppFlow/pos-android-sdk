<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.aevi.sdk.pos.flow.flowservicesample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <provider
            android:name=".PaymentFlowServiceInfoProvider"
            android:authorities="com.aevi.sdk.pos.flow.sample.provider"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.PaymentFlowServiceInfoProvider"/>
            </intent-filter>
        </provider>

        <service
            android:name=".service.GenericRequestService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.PROCESS_REQUEST"/>
            </intent-filter>
        </service>

        <service
            android:name=".service.SplitService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.SPLIT_SERVICE"/>
            </intent-filter>
        </service>
        <service
            android:name=".service.PreTransactionService"
            android:enabled="false"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.PRE_PAYMENT_SERVICE"/>
            </intent-filter>
        </service>
        <service
            android:name=".service.PostCardService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.POST_CARD_SERVICE"/>
            </intent-filter>
        </service>
        <service
            android:name=".service.PostTransactionService"
            android:enabled="false"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.POST_PAYMENT_SERVICE"/>
            </intent-filter>
        </service>
        <service
            android:name=".service.PreFlowService"
            android:enabled="false"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.PRE_FLOW_SERVICE"/>
            </intent-filter>
        </service>
        <service
            android:name=".service.PostFlowService"
            android:enabled="false"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.POST_FLOW_SERVICE"/>
            </intent-filter>
        </service>

        <activity
            android:name=".ui.SplitActivity"
            android:excludeFromRecents="true"
            android:label="@string/fss_split">
        </activity>
        <activity
            android:name=".ui.PreTransactionActivity"
            android:excludeFromRecents="true"
            android:label="@string/fss_pre_payment">
        </activity>
        <activity
            android:name=".ui.PostCardActivity"
            android:excludeFromRecents="true"
            android:label="@string/fss_post_card">
        </activity>
        <activity
            android:name=".ui.PreFlowActivity"
            android:excludeFromRecents="true"
            android:label="@string/fss_pre_flow">
        </activity>
        <activity
            android:name=".ui.PostTransactionActivity"
            android:excludeFromRecents="true"
            android:label="@string/fss_post_payment">
        </activity>
        <activity
            android:name=".ui.PostFlowActivity"
            android:excludeFromRecents="true"
            android:label="@string/fss_post_flow">
        </activity>
        <activity
            android:name=".settings.SettingsActivity"
            android:excludeFromRecents="true"
            android:label="@string/sample_settings"
            android:noHistory="true"
            android:theme="@style/AppThemeActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoyaltyBalanceActivity"
            android:excludeFromRecents="true"
            android:label="@string/fss_loyalty_balance">
        </activity>
    </application>

</manifest>