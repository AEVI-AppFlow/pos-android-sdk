<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.aevi.sdk.pos.flow.flowservicesample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeActionBar">
        <provider
            android:name=".FlowServiceInfoProvider"
            android:authorities="com.aevi.sdk.pos.flow.sample.provider"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.FlowServiceInfoProvider"/>
            </intent-filter>
        </provider>

        <service
            android:name=".service.GenericRequestService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.PROCESS_REQUEST"/>
            </intent-filter>
        </service>

        <service
            android:name=".service.SplitService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.SPLIT_SERVICE"/>
            </intent-filter>
        </service>
        <service
            android:name=".service.PrePaymentService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.PRE_PAYMENT_SERVICE"/>
            </intent-filter>

            <!-- Pre-payment consists of two separate, but similar stages. Pre-transaction happens before any potential card reading takes place, -->
            <!-- and post-card-reading happens after that optional card reading step takes place when customer card details may be available. Apps would -->
            <!-- typically choose to be in one or the other of these depending on the use case, but you can choose to be called for both stages. -->
            <meta-data
                android:name="pre-transaction"
                android:value="false"/>
            <meta-data
                android:name="post-card-reading"
                android:value="true"/>
        </service>
        <service
            android:name=".service.PostPaymentService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.POST_PAYMENT_SERVICE"/>
            </intent-filter>
        </service>
        <service
            android:name=".service.PreFlowService"
            android:enabled="false"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.PRE_FLOW_SERVICE"/>
            </intent-filter>
        </service>
        <service
            android:name=".service.PostFlowService"
            android:enabled="false"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aevi.sdk.pos.flow.action.POST_FLOW_SERVICE"/>
            </intent-filter>
        </service>

        <activity
            android:name=".ui.SplitActivity"
            android:excludeFromRecents="true"
            android:label="@string/fss_split"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".ui.PrePaymentActivity"
            android:excludeFromRecents="true"
            android:label="@string/fss_pre_payment"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".ui.PreFlowActivity"
            android:excludeFromRecents="true"
            android:label="@string/fss_pre_flow"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".ui.PostPaymentActivity"
            android:excludeFromRecents="true"
            android:label="@string/fss_post_payment"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".ui.PostFlowActivity"
            android:excludeFromRecents="true"
            android:label="@string/fss_post_flow"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".settings.SettingsActivity"
            android:excludeFromRecents="true"
            android:label="@string/sample_settings"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoyaltyBalanceActivity"
            android:excludeFromRecents="true"
            android:label="@string/fss_loyalty_balance"
            android:noHistory="true">
        </activity>
    </application>

</manifest>