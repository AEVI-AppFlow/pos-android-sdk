<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/flow_config_card_margin"
    android:background="@android:color/transparent"
    app:cardBackgroundColor="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/flow_app_bk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flow_app_icon"
            android:layout_width="@dimen/app_icon_height"
            android:layout_height="@dimen/app_icon_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:src="@drawable/ic_settings"/>

        <TextView
            android:id="@+id/flow_app_label"
            style="@style/Base.Widget.AppCompat.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_gravity="center_horizontal"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_horizontal"
            android:paddingRight="@dimen/margin_horizontal"
            android:singleLine="true"
            android:text="@string/app_name"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
