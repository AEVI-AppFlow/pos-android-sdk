<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_wrapper"
    android:layout_width="@dimen/app_grid_width"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/app_icon_width"
        android:layout_height="@dimen/app_icon_height"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="@dimen/margin_vertical"/>

    <TextView
        android:id="@+id/app_text"
        style="@style/AppIconText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_icon_text_gap"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        tools:text="Application with a really long"/>

</LinearLayout>