<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.aevi.sdk.pos.flow.sample.ui.ModelDetailsActivity">

    <TextView
            android:id="@+id/title"
            style="@style/DialogTitle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:text="@string/payment_result"/>

    <ImageView
            android:id="@+id/request_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:src="@drawable/ic_check_circle"/>

    <fragment
            android:id="@+id/fragment_request_details"
            android:name="com.aevi.sdk.pos.flow.sample.ui.ModelDetailsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:tag="request"/>

</LinearLayout>