<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/flowStageBackgroundStrokeColor"/>
            <corners android:radius="5dp"/>
            <solid android:color="@color/flowStageBackgroundDisabledColor"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/flowStageBackgroundStrokeColor"/>
            <corners android:radius="5dp"/>
            <solid android:color="@color/flowStageBackgroundSelectedColor"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/itemBackgroundStrokeColor"/>
            <corners android:radius="5dp"/>
            <solid android:color="@color/itemBackgroundColor"/>
        </shape>
    </item>

</selector>